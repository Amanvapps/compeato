<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:padding="@dimen/value_five">

    <LinearLayout
        android:id="@+id/linear_layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view_select"
            android:layout_width="@dimen/value_fifteen"
            android:layout_height="@dimen/value_fifteen"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/selected_box" />

        <TextView
            android:id="@+id/text_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_ten"
            android:background="@android:color/transparent"
            android:button="@null"
            android:maxLines="1"
            android:text="All charities"
            android:textColor="@color/darkGreyColor"
            android:textSize="@dimen/text_fourteen" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_item"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_ten"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_thirty"
                android:layout_gravity="center"
                android:background="@drawable/rounded_border_grey_button"
                android:layout_marginEnd="@dimen/value_ten"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_twelve"
                android:typeface="serif" />

            <Button
                android:id="@+id/ok_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_thirty"
                android:layout_gravity="center"
                android:background="@drawable/rounded_orange_button"
                android:text="@string/ok"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_twelve"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>