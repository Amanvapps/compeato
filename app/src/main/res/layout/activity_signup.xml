<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-315dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/splash_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/helvetica"
                android:text="@string/become_a_campeat_member"
                android:textColor="@color/textcolorlight"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="@+id/imageVie3"
                app:layout_constraintStart_toStartOf="@+id/imageVie3"
                app:layout_constraintTop_toBottomOf="@+id/imageVie3" />


            <ImageView
                android:id="@+id/imageVie3"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginEnd="110dp"
                android:contentDescription="@string/image_desc"
                android:src="@drawable/orange_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_user_name_signup"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:gravity="center_vertical"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/edittext_background"
                android:fontFamily="@font/helveticaneue"
                android:hint="@string/full_name"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColor="@color/textcolordark"
                android:textColorHint="@color/textcolorlight"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/splash_txt" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_email"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/edittext_background"
                android:fontFamily="@font/helveticaneue"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:inputType="text"
                android:paddingStart="15dp"
                android:textColor="@color/textcolordark"
                android:textColorHint="@color/textcolorlight"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_user_name_signup" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/retype_pass"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/edittext_background"
                android:fontFamily="@font/helveticaneue"
                android:hint="@string/re_type_password"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:gravity="center_vertical"
                android:textColor="@color/textcolordark"
                android:textColorHint="@color/textcolorlight"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_password_signup" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_password_signup"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/edittext_background"
                android:fontFamily="@font/helveticaneue"
                android:hint="@string/password"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="@color/textcolordark"
                android:textColorHint="@color/textcolorlight"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/sign_up"
                android:layout_width="0dp"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@color/colorAccent"
                android:elevation="10dp"
                android:fontFamily="@font/helveticaneue"
                android:text="@string/sign_up"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_30sdp"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_password_signup"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edit_text_password_signup"
                app:layout_constraintTop_toBottomOf="@+id/retype_pass" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_45sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/kakao"
                app:layout_constraintStart_toStartOf="@+id/sign_up"
                app:layout_constraintTop_toBottomOf="@+id/google">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text="@string/have_an_account"
                    android:textColor="@color/textcolorlight"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/signin"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/sign_up"
                    app:layout_constraintTop_toBottomOf="@+id/google" />

                <TextView
                    android:id="@+id/signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text="@string/signin"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="@+id/sign_up"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.0" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_shape"
                android:backgroundTint="@color/edittext_background"
                android:gravity="center_vertical"
                android:inputType="text"
                android:orientation="horizontal"
                android:paddingStart="5dp"
                android:paddingEnd="1dp"
                app:layout_constraintEnd_toEndOf="@+id/edit_text_email"
                app:layout_constraintStart_toStartOf="@+id/edit_text_email"
                app:layout_constraintTop_toBottomOf="@+id/edit_text_email">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/country_code"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_5sdp"
                    app:ccpDialog_searchEditTextTint="@color/edittext_bg"
                    app:ccpDialog_backgroundColor="@color/white_color"
                    app:ccp_defaultNameCode="KZ"
                    app:ccp_textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/edittext_shape"
                    android:backgroundTint="@color/edittext_background"
                    android:fontFamily="@font/helveticaneue"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/textcolordark"
                    android:textColorHint="@color/textcolorlight"
                    android:textSize="@dimen/_12sdp"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/google"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="@dimen/_32sdp"
                android:background="@drawable/google_button"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/kakao"
                app:layout_constraintStart_toStartOf="@+id/sign_up"
                app:layout_constraintTop_toBottomOf="@+id/sign_up" />

            <ImageView
                android:id="@+id/kakao"
                android:layout_width="0dp"
                android:layout_height="@dimen/_39sdp"
                android:layout_marginStart="16dp"
                android:background="@drawable/kakao_button"
                app:layout_constraintBottom_toBottomOf="@+id/google"
                app:layout_constraintEnd_toEndOf="@+id/sign_up"
                app:layout_constraintStart_toEndOf="@+id/google"
                app:layout_constraintTop_toTopOf="@+id/google" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>