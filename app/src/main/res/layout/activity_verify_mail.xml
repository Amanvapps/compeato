<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".views.activities.ForgetPasswordActivityView">


    <ImageView
        android:id="@+id/imageVie3"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="110dp"
        android:contentDescription="@string/image_desc"
        android:src="@drawable/orange_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/helveticaneue"
        android:gravity="center"
        android:text="@string/verify_your_email"
        android:textColor="@color/textGreyColor"
        android:textSize="@dimen/text_sixteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageVie3" />

    <EditText
        android:id="@+id/edit_text_email_reset"
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorAccent"
        android:background="@drawable/edittext_shape"
        android:backgroundTint="@color/edittext_background"
        android:fontFamily="@font/helvetica"
        android:hint="emailaddress@example.com"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/textcolordark"
        android:textColorHint="@color/textcolorlight"
        android:textSize="@dimen/text_fourteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_txt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_reset"
        android:layout_width="0dp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:elevation="10dp"
        android:fontFamily="@font/helveticaneue"
        android:text="@string/get_verify_link"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_12sdp"
        app:cornerRadius="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="@+id/edit_text_email_reset"
        app:layout_constraintStart_toStartOf="@+id/edit_text_email_reset"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email_reset" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_48sdp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/button_reset"
        app:layout_constraintStart_toStartOf="@+id/button_reset"
        app:layout_constraintTop_toBottomOf="@+id/button_reset">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticaneue"
            android:text="@string/return_to"
            android:textColor="@color/textGreyColor"
            android:textSize="@dimen/text_sixteen"
            tools:layout_editor_absoluteX="180dp"
            tools:layout_editor_absoluteY="440dp" />

        <TextView
            android:id="@+id/text_view_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticaneue"
            android:text="@string/sign_in"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_sixteen"
            tools:layout_editor_absoluteY="440dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>