<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/rounded_layout_white_background"
    android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@color/bottomSheetbuttoncolor"
            android:backgroundTint="@color/bottomSheetbuttoncolor"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:text="@string/receive_small"
            android:textColor="@color/textcolordark"
            android:textSize="@dimen/_14sdp" />


        <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_twenty"
            android:fontFamily="@font/helveticaneue"
            android:text="@string/afkjahdf_shakdgfd"
            android:textColor="@color/darkGreyColor"
            android:textSize="@dimen/_15sdp" />


        <ImageView
            android:id="@+id/qr_iv"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/value_twenty"
            android:layout_marginBottom="@dimen/_24sdp"
            android:src="@drawable/qr_code" />



</LinearLayout>
