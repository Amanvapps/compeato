<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/value_five"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:padding="@dimen/value_five">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_item"
            android:layout_width="@dimen/value_seventy"
            android:layout_height="@dimen/value_seventy"
            android:src="@drawable/burger_one" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/value_eight"
        android:layout_weight="1.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_five"
            android:text="@string/dash"
            android:textColor="@color/darkGreyColor"
            android:textSize="@dimen/text_sixteen"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_three"
            android:maxLines="1"
            android:text="@string/dash"
            android:textColor="@color/darkGreyColor"
            android:textSize="@dimen/text_fourteen" />

        <TextView
            android:id="@+id/text_view_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_three"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dash"
            android:textColor="@color/textGreyColor"
            android:textSize="@dimen/text_twelve" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/value_five"
        android:layout_marginTop="@dimen/value_eight"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:45 AM"
            android:textColor="@color/textGreyColor"
            android:textSize="@dimen/text_twelve" />

    </LinearLayout>

</LinearLayout>