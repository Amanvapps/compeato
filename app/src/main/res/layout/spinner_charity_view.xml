<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:id="@+id/relative_layout_item">

    <TextView
        android:id="@+id/text_view_id"
        style="?android:attr/spinnerItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/down_arrow"
        android:drawablePadding="@dimen/value_ten"
        android:maxLines="1"
        android:paddingLeft="@dimen/value_fifteen"
        android:paddingRight="@dimen/value_fifteen"
        android:singleLine="true"
        android:text="@string/choose_charity"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_thirteen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>