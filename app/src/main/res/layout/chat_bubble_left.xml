<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/value_five"
    android:layout_marginTop="@dimen/value_five">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_pic"
        android:layout_width="@dimen/value_forty"
        android:layout_height="@dimen/value_forty"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/value_ten"
        android:src="@drawable/burger_one" />

    <LinearLayout
        android:id="@+id/linear_layout_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_view_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:padding="@dimen/value_five"
            android:background="@drawable/border_grey"
            android:text="@string/chat_data"
            android:textColor="@color/textGreyColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/value_five"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:45 AM"
                android:maxLines="1"
                android:textSize="@dimen/text_ten"
                android:textColor="@color/textGreyColor" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>