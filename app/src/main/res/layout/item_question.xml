<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:layout_marginTop="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz1"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:fontFamily="@font/helveticaneue"
        android:textSize="@dimen/text_fifteen"/>
    <TextView
        android:id="@+id/txt_question"
        android:layout_marginTop="@dimen/value_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolordark"
        android:textStyle="normal"
        android:fontFamily="@font/helveticaneue"
        android:textSize="@dimen/_12sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_marginTop="@dimen/value_five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/optional_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/value_eight"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/short_answer_optional"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:fontFamily="@font/helveticaneue"
            android:textSize="@dimen/text_fifteen"
            />
        <EditText
            android:id="@+id/edt_optional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/answer"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:backgroundTint="@color/colorPrimary"
            android:textColorHint="@color/textGreyColor"
            android:fontFamily="@font/helveticaneue"
            android:textSize="@dimen/text_fifteen"/>
    </LinearLayout>



</LinearLayout>