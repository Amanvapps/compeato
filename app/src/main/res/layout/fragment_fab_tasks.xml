<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B000000"
    android:elevation="@dimen/_9sdp"
    android:clickable="true"
    tools:context=".views.fragments.FabTasks"
    android:fitsSystemWindows="true"
    android:focusable="true">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_contribution"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/mycontribution"
        android:tint="@color/white_color"
        app:backgroundTint="@color/colorAccent"
        app:elevation="9dp"
        app:fabCustomSize="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="@+id/floating_button_tad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/floating_button_tad"
        app:layout_constraintTop_toTopOf="@+id/floating_button_tad"
        app:layout_constraintVertical_bias="0.0"
        app:maxImageSize="@dimen/_16sdp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_tad"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/earnpoints2"
        app:backgroundTint="@color/colorAccent"
        app:elevation="9dp"
        android:scaleType="center"
        app:fabCustomSize="@dimen/_30sdp"
        app:layout_constraintBottom_toTopOf="@+id/textVw3"
        app:layout_constraintEnd_toStartOf="@+id/floating_button_contribution"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="@dimen/_16sdp" />


    <TextView
        android:id="@+id/texiew2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/helvetica"
        android:text="@string/my_contribution"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_ten"
        app:layout_constraintBottom_toBottomOf="@+id/textVw3"
        app:layout_constraintEnd_toEndOf="@+id/floating_button_contribution"
        app:layout_constraintStart_toStartOf="@+id/floating_button_contribution"
        app:layout_constraintTop_toTopOf="@+id/textVw3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textVw3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_58sdp"
        android:fontFamily="@font/helvetica"
        android:text="@string/earn_points"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/floating_button_tad"
        app:layout_constraintStart_toStartOf="@+id/floating_button_tad" />

</androidx.constraintlayout.widget.ConstraintLayout>